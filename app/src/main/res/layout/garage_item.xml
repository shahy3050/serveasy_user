<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginTop="15dp"
    android:paddingTop="15dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="55dp">

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:columnCount="2"
        android:orientation="vertical"
        android:padding="22dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Garage Name:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/garage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginStart="15dp"
            android:text="garage_name"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Area:"
            android:textColor="@color/colorPrimaryDark"

            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/garage_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginStart="15dp"
            android:text="garage-area"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="City: "
            android:textColor="@color/colorPrimaryDark"

            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/garage_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginStart="15dp"
            android:text="garage-city"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Full Address: "
            android:textColor="@color/colorPrimaryDark"

            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/garage_full_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginStart="15dp"

            android:text="garage-full_addr"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Owner: "

            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/garage_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginStart="15dp"


            android:text="garage_owner"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Contact:"
            android:textColor="@color/colorPrimaryDark"

            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/garage_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginStart="15dp"

            android:text="garage-contact"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />


    </GridLayout>

    <Button
        android:id="@+id/book_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="185dp"
        android:background="@color/colorPrimaryDark"
        android:text="View Services" />


</androidx.cardview.widget.CardView>